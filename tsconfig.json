{
    "compilerOptions": {
      "strictPropertyInitialization": false,
      "target": "ES2020", 
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,  // Habilitar decoradores
      "emitDecoratorMetadata": true,   // Generar metadata para los decoradores
      "sourceMap": true,
      "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],  // Incluir los archivos TypeScript dentro de la carpeta "src"
    "exclude": ["node_modules"]  // Excluir la carpeta "node_modules"
  }